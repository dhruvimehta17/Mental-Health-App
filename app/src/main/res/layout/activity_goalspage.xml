<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0CA9F"
    tools:context=".goalspage">

    <!-- Title -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="401dp"
        android:layout_height="132dp"
        android:text="Goals and Suggestions"
        android:textAlignment="center"
        android:textColor="#435339"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Suggestions Title -->

    <!-- Suggestions TextView -->

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginTop="80dp"
        android:text="Our Suggestions:"
        android:textAlignment="center"
        android:textColor="#435339"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <Button
        android:id="@+id/okbutton"
        android:layout_width="182dp"
        android:layout_height="56dp"
        android:layout_marginTop="148dp"
        android:backgroundTint="#E9F1EA"
        android:text="OK"
        android:textColor="#789666"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/goalTextView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="164dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:text="Goals this Week:"
        android:textAlignment="center"
        android:textColor="#435339"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/suggestionTextView" />

    <TextView
        android:id="@+id/goalTextView"
        android:layout_width="305dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:ellipsize="end"
        android:maxLines="5"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:text="Here are your goals:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3" />

    <TextView
        android:id="@+id/suggestionTextView"
        android:layout_width="305dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:ellipsize="end"
        android:maxLines="5"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:text="Here are our suggestions:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView5" />

    <!-- Goals Title -->

    <!-- Goals TextView -->

    <!-- OK Button -->

</androidx.constraintlayout.widget.ConstraintLayout>
